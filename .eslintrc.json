{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [ 
        "prettier"
     ],
    "rules": {
        "prettier/prettier": "error",
        "semi": "error" // "semi" 는 세미콜론이 필요한 위치에 없을 시 에러 발생
    }
}
